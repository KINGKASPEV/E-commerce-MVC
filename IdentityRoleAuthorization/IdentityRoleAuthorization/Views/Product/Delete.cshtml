@model IdentityRoleAuthorization.Models.Dtos.ProductResponseDto

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center" role="alert">
        <strong>Alert!</strong> Are you sure you want to delete this product?
    </div>

    <div class="row">
        <div class="col-md-6">
            <!-- Left column for the image -->
            <dl class="row">
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model.ImageFileName))
                    {
                        <img src="~/Uploads/@Model.ImageFileName" alt="Product Image" class="img-fluid" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <!-- Right column for other details -->
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InStock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InStock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ManufacturingDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ManufacturingDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TotalValue)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TotalValue)
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="GetAllProduct" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
