@model IEnumerable<Ecommerce.Model.Models.Dtos.ApplicationUserResponseDto>

@{
    ViewData["Title"] = "AllUsers";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">List of Users</h1>

    <div class="row mb-3">
        <div class="col text-start">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Profile Profile</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.ProfileProfile</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-controller="User" asp-route-userId="@item.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Details" asp-controller="User" asp-route-userId="@item.Id" class="btn btn-info">Details</a>
                                <a asp-action="Delete" asp-controller="User" asp-route-userId="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
